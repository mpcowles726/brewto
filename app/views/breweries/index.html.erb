<p id="notice"><%= notice %></p>

<div class="panel panel-default">
<div class="panel-header">
<h1 id="listingHeader">Listing Breweries</h1>
</div>

<div id="breweries" class="transitions-enabled"> 
  
    <div class="box">
      <div class="panel panel-default">
        <% @breweries.each do |brewery| %>
      <div class="panel-body">
   <p>
  <strong>Name:</strong>
  <%= brewery.name %>
 </p>
<p>
  <strong>Address:</strong>
  <%= brewery.address %>
</p>
<p>
  <strong>Latitude:</strong>
  <%= brewery.latitude %>
</p>
<p>
  <strong>Longitude:</strong>
  <%= brewery.longitude %>
</p>

        </br>
        <hr size="3" color="black">
</div>

<div class="panel-footer">
        <%= link_to 'Show', brewery %></br>

        <%= link_to 'Edit', edit_brewery_path(brewery) %></br>
        <%= link_to 'Destroy', brewery, method: :delete, data: { confirm: 'Are you sure?' } %></br>
      
    
   
  

<%= link_to 'Create New Brewery', new_brewery_path %>
</div>
 <% end %>
</div>