

<div id="breweries" class="transitions-enabled">
  <% @breweries.each do |brewery| %>
      <div class="box">
        <div class="panel panel-default">
    <%= image_tag ("https://maps.googleapis.com/maps/api/streetview?size=300x300&location=#{brewery.latitude}%2C#{brewery.longitude}&key=#{ENV['FBAPI_KEY']}") %>
     <br>
     <div class="panel-body">
  <strong><%= brewery.name %></strong>
     <br>
     <br>
    <strong>Address: </strong>
   <%= brewery.address %>
     <br>
     <br>
     <strong>Latitude:</strong>
  <%= brewery.latitude %>
     <br>
     <br>
     <strong>Longitude:</strong>
  <%= brewery.longitude %>
     <br>
    </div>




    <div class="panel-footer">
     <br>
     <% if brewery.user == current_user %>
    <%= link_to 'Edit', edit_brewery_path(brewery) %>
        <br>
    <%= link_to 'Delete', brewery, method: :delete, data: { confirm: 'Are you sure?' } %>
    <% end %>    
    </div>

    </div>
    
    </div>
    
  
 <% end %>


